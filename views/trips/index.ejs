<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Trips</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css"
    />
    <style>
      body { 
        background-image: url('https://i.imgur.com/shIFfER.png');
        background-repeat: no-repeat;
        background-position: right;
        background-size: cover;
        height: 100vh;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="columns is-vcentered is-centered">
      <div class="column has-text-centered is-one-third pt-6">
        <ul style="background-color: rgb(240, 245, 220);" class=" box has-text-centered nav-link">
        <% trips.forEach(trip => { %>
          <li class="box is-size-4 pt-6 has-background-primary-dark">
            <a href="/trips/<%= trip._id %>"> <%= trip.countries %> <br /></a>
            <br />
            </li>
          <% }) %>
        </ul>
        <a href="/trips/new">
        <div class="title is-1 has-text-primary-dark">+
        </div>
        </a>
      </div>
    </div>
  </body>
</html>
